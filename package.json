    "karma-webpack": "2.0.4",
    "node-sass": "4.5.3",
    "postcss-loader": "2.0.6",
    "protractor": "5.1.2",
    "sass-loader": "^6.0.6",
    "style-loader": "0.18.2",
    "ts-jest": "20.0.7",
    "ts-node": "3.2.0",
    "tslint": "~5.8.0",
    "typescript": "2.4.1",
    "url-loader": "0.5.9",
    "wait-on": "2.0.2",
